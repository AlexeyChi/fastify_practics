extends ../layouts/page.pug

block header
  h2.my-3.font-monospace All courses
  a.btn.btn-sm.btn-outline-primary(href='/courses/new')
    .d-flex.align-items-center
      svg.bi.bi-journal-plus(xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 16 16")
        path(fill-rule="evenodd" d="M8 5.5a.5.5 0 0 1 .5.5v1.5H10a.5.5 0 0 1 0 1H8.5V10a.5.5 0 0 1-1 0V8.5H6a.5.5 0 0 1 0-1h1.5V6a.5.5 0 0 1 .5-.5")
        path(d="M3 0h10a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2v-1h1v1a1 1 0 0 0 1 1h10a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H3a1 1 0 0 0-1 1v1H1V2a2 2 0 0 1 2-2")
        path(d="M1 5v-.5a.5.5 0 0 1 1 0V5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1zm0 3v-.5a.5.5 0 0 1 1 0V8h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1zm0 3v-.5a.5.5 0 0 1 1 0v.5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1z")
        span.ms-2 Add new course
block content
  form(action= '/courses' method= 'get').my-5
    .row
      .col-12.col-md
        .mb-3
          label.form-label(for= 'filterTitle') Название курса
          input.form-control(id= 'filterTitle' name= 'term' value= term)
        input(class='btn btn-primary' type='submit' value= 'Поиск')
        .table-responsive
          table.table.table-hover.table-striped.my-5.shadow-sm.p-3.mb-5.bg-body-tertiary.rounded
              tr
                th Id курса
                th Название
                th Описание
              if !courses.length
                p Ничего не найдено
              each course in courses
                tr
                  td
                    a.link-info.link-underline-opacity-0.link-underline-opacity-100-hover.link-dark.text-align-center(href=`courses/${course.id}`)= course.id
                  td
                    a.link-info.link-underline-opacity-0.link-underline-opacity-100-hover.link-dark(href=`courses/${course.id}`)= course.title
                  td= course.description
